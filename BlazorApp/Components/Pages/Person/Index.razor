@page "/person"

@inject PeopleDataset ds

<h3>Výpis osob</h3>

<table>
    <tr>
        <td>
            Jméno
        </td>
        <td>
            Příjmení
        </td>
        <td>
            Email
        </td>
        <td>
            Narozen
        </td>
    </tr>
    @foreach(var person in ds.GetPeople().Take(50))
    {
        <tr>
            <td>
                @person.FirstName
            </td>
            <td>
                @person.LastName
            </td>
            <td>
                @person.Email
            </td>
            <td>
                @person.DateOfBirth.ToString("dd. MM. yyyy")
            </td>
        </tr>
    }

</table>


@code {

    protected override void OnInitialized()
    {
        ds.GetPeople();
    }


}
